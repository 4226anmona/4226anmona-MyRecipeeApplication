		<link rel="stylesheet" href="/css/style.css">
</head>

<body>
	<div>
		<h2>Recipes</h2>
	</div>
	<div class="navigation view">
		<a href="/admin">Home</a>
		<a href="/logout">Logout</a><br><br>
		<a href="/admin/addNewrecipe">Add New Recipe</a><br>
		<a href="/admin/view_recipes">Recipes</a><br>
	</div>

	<table class="main" border="1">
		<tr>
			<td>Recipe Name</td>
			<td>Description</td>
			<td>Origin</td>
			<td>Main Ingedient-1</td>
			<td>Main Ingedient-2</td>
			<td>Main Ingedient-3</td>
			<td>Other Ingredient</td>
		</tr>
		<% for(var i=0; i < userlist.length; i++){ %>
		<tr>
			<td><%= userlist[i].fname %></td>
			<td><%= userlist[i].lname %></td>
			<td><%= userlist[i].username %></td>
			<td><%= userlist[i].email %></td>
			<td><%= userlist[i].phone %></td>
			<td><%= userlist[i].fathersName %></td>
			<td><%= userlist[i].nid %></td>
			<td>
				<a href="/admin/view_recipes/<%= userlist[i].username %>">View Recipe </a>
			</td>
		</tr>
		<%  } %>
	</table>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"
